@page "/contacts"
<PageTitle>Contacts</PageTitle>

<main>

    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="/img/Logo.svg" alt="" height="57">
        <h2>Contact Information SpottyMotor</h2>
        <p class="lead">Are there any questions left? . Leave your message and contact details and SpottyMotor specialists will contact you in the near working hours.</p>
    </div>

    <hr class="col-3 col-md-2 mb-5">

    <div class="row g-5">
        <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Billing address</h4>
        <form class="needs-validation" novalidate="">
          <div class="row g-3">
            <div class="col-sm-6">
              <label for="firstName" class="form-label">First name</label>
              <input type="text" class="form-control" id="firstName" placeholder="" value="" required="">
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>

            <div class="col-sm-6">
              <label for="lastName" class="form-label">Last name</label>
              <input type="text" class="form-control" id="lastName" placeholder="" value="" required="">
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>

            <div class="col-12">
              <label for="email" class="form-label">Email <span class="text-body-secondary">(Optional)</span></label>
              <input type="email" class="form-control" id="email" placeholder="you@example.com">
              <div class="invalid-feedback">
                Please enter a valid email address for shipping updates.
              </div>
            </div>
          </div>

          <hr class="my-4">

          <button class="w-100 btn btn-primary btn-lg" type="submit">Submit</button>
        </form>
      </div>
        <div class="col-md-5 col-lg-4 order-md-last">
            <h2 class="text-body-emphasis">Contacts</h2>
            <ul class="list-unstyled ps-0">
                <li>
                    <a class="icon-link mb-1" href="" rel="noopener" target="_blank">
                        <img src="img/instagram_logo.svg" width="30" />
                        Instagram
                    </a>
                </li>
                <li>
                    <a class="icon-link mb-1" href="" rel="noopener" target="_blank">
                        <img src="img/telegram_logo.svg" width="30" />
                        Telegram
                    </a>
                </li>
                <li>
                    <a class="icon-link mb-1" href="" rel="noopener" target="_blank">
                        <img src="img/facebook_logo.svg" width="30" />
                        Facebook
                    </a>
                </li>
                <li>
                    <a class="icon-link mb-1" href="" rel="noopener" target="_blank">
                        <img src="img/twitter_logo.svg" width="30"/>
                        Twitter
                    </a>
                </li>
                <li>
                    <a class="icon-link mb-1 d-flex align-items-center" href="" rel="noopener" target="_blank" style="margin-left: 3px">
                        <span class="oi oi-map-marker" aria-hidden="true" style="font-size: 30px; color: #ff0037";"></span> Catalog
                    </a>
                </li>
                <li>
                    <a class="icon-link mb-1 d-flex align-items-center" href="" rel="noopener" target="_blank" style="margin-left: 3px">
                        <span class="oi oi-timer" aria-hidden="true" style="font-size: 30px; color: #ff0037" ;"></span> Working hours
                    </a>
                </li>
                <li>
                    <a class="icon-link mb-1 d-flex align-items-center" href="" rel="noopener" target="_blank" style="margin-left: 6px">
                        <span class="oi oi-phone" aria-hidden="true" style="font-size: 30px; color: #ff0037" ;"></span> +808005556565
                    </a>
                </li>
            </ul>
        </div>
    </div>
</main>