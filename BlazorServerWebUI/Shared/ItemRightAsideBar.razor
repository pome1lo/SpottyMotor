 <li>
    <div class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top">
        <img src="@ImagePath" height="60" width="60" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false" />
        <div class="col-lg-8">
            <h6 class="mb-0">@MainHead</h6>
            <small>@Body</small>
        </div>
    </div>
</li>

@code {
    [Parameter]
    public string ImagePath { get; set; } = null!;

    [Parameter]
    public string MainHead { get; set; } = null!;

    [Parameter]
    public string Body { get; set; } = null!;
}